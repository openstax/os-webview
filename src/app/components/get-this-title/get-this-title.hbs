<style scoped>
    @import url(/app/components/remover/remover.css);
</style>
<div class="get-this-title">
    <div class="submenu">
    </div>
    <div class="options">
        {{#if webviewLink}}
            <div class="option">
                <a href="{{webviewLink}}">
                    <span class="fa fa-laptop"></span>
                    View online
                </a>
            </div>
        {{/if}}
        {{#if conceptCoachLink}}
            <div class="option">
                <a href="{{conceptCoachLink}}">
                    <span class="fa fa-mortar-board"></span>
                    View Concept Coach version online
                </a>
            </div>
        {{/if}}
        {{#if pdfLink}}
            <div class="option">
                <a href="{{pdfLink}}" class="show-pdf-submenu">
                    <span class="fa fa-cloud-download"></span>
                    Download a PDF
                </a>
            </div>
        {{/if}}
        {{#if printLink}}
            <div class="option">
                <a href="{{printLink}}" class="show-print-submenu">
                    <span class="fa fa-book"></span>
                    Order a print copy
                </a>
            </div>
        {{/if}}
        {{#if bookshareLink}}
        <div class="option">
            <a href="{{bookshareLink}}">
                <span class="fa fa-volume-up"></span>
                Bookshare
            </a>
        </div>
        {{/if}}
        {{#if ibookLink}}
                {{#if ibookLink2}}
                    <div class="option">
                        <span class="option-header">
                            <span class="fa fa-tablet"></span>
                            iBook
                        </span>
                        <a href="{{ibookLink}}">
                            Volume 1
                        </a>
                        <a href="{{ibookLink2}}">
                            Volume 2
                        </a>
                    </div>
                {{else}}
                    <div class="option">
                        <a href="{{ibookLink}}">
                            <span class="fa fa-tablet"></span>
                            iBook
                        </a>
                    </div>
                {{/if}}
        {{/if}}
    </div>
</div>
