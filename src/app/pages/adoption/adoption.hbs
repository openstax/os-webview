        <label for="adoption_school_name">School name</label><span class="required"> *</span><br>
        <input id="adoption_school_name" name="adoption[school_name]" size="30" type="text">
      </div>
        <div class="field">
          <label for="adoption_school_url">School url</label><span class="required"> *</span><br>
          <input id="adoption_school_url" name="adoption[school_url]" size="30" type="text">
        </div>
