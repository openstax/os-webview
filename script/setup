#!/bin/bash

if [ "$1" != "fast" ]; then
    rm -rf jspm_packages node_modules
fi

source ./script/bootstrap || exit 1

>&2 echo "==> Installing node packages"
if [[ $(which yarn) ]]; then
  yarn install || exit 2
else
  npm install || exit 2
fi

>&2 echo "==> Installing JSPM packages"
$(npm bin)/jspm install || exit 3
